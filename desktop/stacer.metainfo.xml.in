<?xml version="1.0" encoding="UTF-8"?>
<component type="console-application">
    <id>fr.quentium.stacer</id>

    <name>Stacer</name>
    <summary>Linux System Optimizer and Monitoring</summary>

    <metadata_license>CC0-1.0</metadata_license>
    <project_license>GPL-3.0-or-later</project_license>
    <developer_name>Quentin Lienhardt</developer_name>

    <description>
        <p>Stacer is an open source system optimizer and application monitor that helps users to manage entire system with different aspects, its an all in one system utility.</p>
    </description>

    <launchable type="desktop-id">stacer.desktop</launchable>

    <icon type="cached">stacer.png</icon>

    <categories>
        <category>Utility</category>
        <category>System</category>
        <category>Monitor</category>
    </categories>

    <url type="homepage">https://github.com/QuentiumYT/Stacer</url>

